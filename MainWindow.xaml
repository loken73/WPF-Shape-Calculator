<Window x:Class="ShapeCalculatorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShapeCalculatorWPF"
        mc:Ignorable="d"
        Title="Area Calculator" Height="320" Width="400" ResizeMode="NoResize" WindowState="Normal" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.RowSpan="1" Grid.ColumnSpan="2" Margin="30,30" TextWrapping="Wrap" TextAlignment="Center" Text="What type of shape would you like to calculate?"></TextBlock>
        
        <Button x:Name="TwoDShape_submit" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Row="1" Margin="10" Content="Two Dimensional Shapes" Click="TwoDShape_submit_Click" ></Button>
        
        <Button x:Name="ThreeDShape_Submit" Grid.ColumnSpan="1" Grid.RowSpan="2" Grid.Row="1" Grid.Column="1" Margin="10" Content="Three dimensional shapes" Click="ThreeDShape_Submit_Click" ></Button> 
    </Grid>
</Window>
